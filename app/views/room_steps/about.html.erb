<% title 'New Listing - About' %>
<% noindex %>

<nav class="navbar navbar-default" role="navigation" id="navbar-book">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="/"><b>HOUR</b>BEDS</a>
    </div>
  </div>
</nav>
<div class="container">
<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-steps">
      <li class="done">
        <b>Step 1</b>
        <span class="float-right">Basic Info</span>
      </li>
      <li class="active">
        <b>Step 2</b>
        <span class="float-right">About Listing</span>
      </li>
      <li>
        <b>Step 3</b>
        <span class="float-right">Tariff / Pricing</span>
      </li>
      <li>
        <b>Step 4</b>
        <span class="float-right">Photos</span>
      </li>
    </ul>
  </div>
  <div class="col-md-6">
    <%= simple_form_for @room, url: wizard_path do |f| %>
      <div class="form-group">
        <%= f.input :title, required: true, label: "Title", input_html: {class: "form-control"} %>
        <div class="marTop-10"><%= image_tag 'lightbulb.png', class: "icon-sm" %> <small><b>Fact:</b> descriptive titles get booked five times more often than “John’s Hotel”.</small></div>
      </div>
      <br>
      <div class="form-group">
        <%= f.input :description, required: true, label: "Desription", placeholder: "Tell the guests a little more about your listing.", input_html: {rows: 6, class: "form-control"} %>
        <div class="marTop-10"><%= image_tag 'lightbulb.png', class: "icon-sm" %> <small><b>Fact:</b> the more detailed the desription is, the more likely your room will get booked.</small></div>
      </div>
      <br>
      <label>Amenities & Facilities</label>
      <div class="amenities-wrapper">
      <div class="checkbox checkbox-success">
        <%= f.check_box :free_wifi %>
        <label>Free Wifi</label>
      </div>

      <div class="checkbox checkbox-success">
        <%= f.check_box :outdoor_pool %>
        <label>Swimming Pool</label>
      </div>

      <div class="checkbox checkbox-success">
        <%= f.check_box :free_parking %>
        <label>Free Parking</label>
      </div>
      </div>
      <hr>
      <div class="form-group">
        <%= f.button :submit, "Save & Proceed", class: "btn-lg btn-success" %>
      </div>

        
    <% end %>
  </div>
</div>
</div>