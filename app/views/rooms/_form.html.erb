<%= simple_form_for(@room) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :booking_start %>
    <%= f.input :booking_end %>
    <%= f.input :active %>
    <%= f.input :location %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :district %>
    <%= f.association :area %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
